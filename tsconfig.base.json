{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "apps/web/src/*"
      ],
      "@api/*": [
        "apps/api/src/*"
      ],
      "@web/*": [
        "apps/web/src/*"
      ],
      "@shared/*": [
        "packages/*"
      ]
    }
  }
}
